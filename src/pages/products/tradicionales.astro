---
import Layout from '~/layouts/PageLayout.astro';
import ProductCard from '~/components/widgets/ProductCard.astro';

const metadata = {
  title: 'Galletitas Celosas Tradicionales',
};
---

<Layout metadata={metadata}>
  <ProductCard
    title="Galletitas Celosas"
    description="Un clásico irresistible. Crocantes, dulces y con ese sabor inconfundible que nos acompaña desde 2001. Ideales para compartir en familia o disfrutar a cualquier hora del día."
    images={[
      '/images/products/tradicionales2.jpg',
      '/images/products/tradicionales.jpg',
      '/images/products/tradicionales.jpg',
    ]}
    alt="Galletitas Celosas"
    link="/contact"
  />
</Layout>
